{{#if addNewAnnouncement}}
<h1>New announcement</h1>
 <div>
   <form>
     <div class="form-group">
       <label for="name">Name</label>
       {{input value=name id="name"}}
     </div>
     <div class="form-group">
       <label for="type">Type</label>
       {{input value=type id="type"}}
     </div>
     <div class="form-group">
       <label for="date">Date</label>
       {{input value=date id="date"}}
     </div>
     <div class="form-group">
       <label for="text">Text</label>
       {{input value=text id="text"}}
     </div>
     <button {{action 'saveAnnouncement1'}}>Save</button>
   </form>
 </div>
 {{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
